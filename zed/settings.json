// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,

  // theme
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Kanagawa Wave - No Italics"
  },

  // fonts
  "ui_font_size": 18,
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "ui_font_features": {
    "calt": true
  },
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_features": {
    "calt": true
  },
  "buffer_font_size": 18,
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
    "font_size": 18,
    "font_features": {
      "calt": true
    },
    "minimum_contrast": 45
  },

  // extensions
  "auto_install_extensions": {
    "html": true,
    "dart": true,
    "kanagawa-themes": true
  },

  // show method signatures in the editor
  "auto_signature_help": false,
  "show_signature_help_after_edits": false,

  // zen mode
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },

  // AI features
  "disable_ai": false,

  // cursor
  "cursor_blink": false,

  // tabs
  "tabs": {
    "file_icons": true,
    "git_status": true
  },

  // show code actions button
  "inline_code_actions": false,

  // start a new line with a comment when a previous line is a comment
  "extend_comment_on_newline": false,

  // if text selected and opened search - text will be inserted into the search query
  "seed_search_query_from_cursor": "selection",

  // use Zed custom windows instead of system windows
  "use_system_path_prompts": false,
  "use_system_prompts": false,

  "relative_line_numbers": true,
  "use_smartcase_search": true
}
